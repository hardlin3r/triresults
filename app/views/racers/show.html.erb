<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @racer.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @racer.last_name %>
</p>

<p>
  <strong>Gender:</strong>
  <%= @racer.gender %>
</p>

<p>
  <strong>Birth year:</strong>
  <%= @racer.birth_year %>
</p>

<p>
  <strong>City:</strong>
  <%= @racer.city %>
</p>

<p>
  <strong>State:</strong>
  <%= @racer.state %>
</p>

<%= link_to 'Edit', edit_racer_path(@racer) %> |
<%= link_to 'Back', racers_path %>
<strong>Races:</strong>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Overall</th>
      <th>Gender</th>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @races.each do |race| %>
      <tr>
        <td><%= race.race_name %></td>
        <td><%= race.race_date %></td>
        <td><%= race.overall_place %></td>
        <td><%= race.gender_place %></td>
        <td><%= race.group_place %></td>
        <td><%= link_to 'Results', race_path(race.race) %></td>
     </tr>
    <% end %>
  </tbody>
</table>
